<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBrownian.MainPage">
    <StackLayout Padding="20">
        <Label Text="Preço Inicial" />
        <Entry Text="{Binding InitialPrice}" Keyboard="Numeric" />

        <Label Text="Volatilidade" />
        <Entry Text="{Binding Volatility}" Keyboard="Numeric" />

        <Label Text="Média do Retorno" />
        <Entry Text="{Binding MeanReturn}" Keyboard="Numeric" />

        <Label Text="Tempo" />
        <Entry Text="{Binding Time}" Keyboard="Numeric" />

        <Button Text="Gerar Movimento Browniano" Command="{Binding GenerateCommand}" />

        <!--<skia:SKCanvasView PaintSurface="OnCanvasViewPaintSurface" HeightRequest="400" />-->
    </StackLayout>

</ContentPage>
