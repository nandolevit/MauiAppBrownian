<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBrownian.MainPage">
    <StackLayout Padding="20">
        <Label Text="Preço Inicial" />
        <Entry Text="{Binding PrecoInical}" Keyboard="Numeric" />

        <Label Text="Volatilidade" />
        <Entry Text="{Binding Volatilidade}" Keyboard="Numeric" />

        <Label Text="Média do Retorno" />
        <Entry Text="{Binding MediaRetorno}" Keyboard="Numeric" />

        <Label Text="Duração (dias)" />
        <Entry Text="{Binding Tempo}" Keyboard="Numeric" />

        <Button Text="Gerar Movimento Browniano" Command="{Binding GeneateBrownianCommand}" />

        <GraphicsView x:Name="BrownianGraph" HeightRequest="300" />
    </StackLayout>

</ContentPage>
